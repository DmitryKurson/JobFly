}

@if (User.IsInRole("Employee"))
{ 
    @section EmployeeMenu {
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Employee" asp-controller="Vacancy" asp-action="Index">Vacancies</a>
    </li>
    <li class="nav-item">
