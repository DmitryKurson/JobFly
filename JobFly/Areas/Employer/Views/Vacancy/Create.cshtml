@model JobFly.Areas.Employer.Models.VacancyCreateViewModel

<h2>Create a vacancy</h2>
<form asp-action="create" asp-controller="vacancy" method="post">
    <p>
        <label asp-for="Title">Title</label><br />
        <input type="text" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </p>
    <p>
        <label asp-for="TaskDescription">Task Description</label><br />
        <input type="text" asp-for="TaskDescription" />
        <span asp-validation-for="TaskDescription" class="text-danger"></span>
    </p>
    <p>
        <label asp-for="MustToHave">Must to have</label><br />
        <input type="text" asp-for="MustToHave" />
        <span asp-validation-for="MustToHave" class="text-danger"></span>
    </p>
    <p>
        <label asp-for="GoodToHave">Good to have</label><br />
        <input type="text" asp-for="GoodToHave" />
        <span asp-validation-for="GoodToHave" class="text-danger"></span>
    </p>
    <p>
        <label asp-for="Salary">Salary</label><br />
        <input type="number" asp-for="Salary" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </p>
    <p>
        <label asp-for="CategoryId">Category</label><br />
        <select asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Title"))">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </p>
    <p>
        <input type="submit" value="Create" />
    </p>
</form>
